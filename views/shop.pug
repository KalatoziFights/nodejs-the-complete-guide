extends layouts/main-layout.pug

block styles
     link(rel="stylesheet", href="/css/product.css")


block content
     main
          if prods.length > 0
               .grid
                    each product in prods
                         article.card.product-item
                              header.card__header
                                   h1.product__title #{product.title}
                              .card__image
                                   img(src="https://static.euronews.com/articles/stories/07/27/40/42/1440x810_cmsv2_df119a14-4bec-5749-aabc-5b513cf5eac1-7274042.jpg", alt="image" width="250")
                              .card__content
                                   h2.product__price $19.99
                                   p.product__description A very interesting book
                              .card__actions
                                   button.btn Add to Cart
          else
               h1 No Products.





